<section class="find-work">
<!-- Page Content -->
    <div class="container">

      <div class="row">

        

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                {{input type='text' class='form-control' value=search placeholder='Search for...'}}

                <span class="input-group-btn">
                  <button class="btn btn-primary" type="button" {{action 'searchJobs'}}>Go!</button>
                </span>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">C/C++</a>
                    </li>
                    <li>
                      {{#link-to "find-work" (query-params category="web")}}HTML/CSS{{/link-to}}
                    </li>
                    <li>
                      {{#link-to "find-work" (query-params category="mobile")}}iOS/Android{{/link-to}}
                    </li>
                  </ul>
                </div>
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      {{#link-to "find-work" (query-params category="javascript")}}JavaScript{{/link-to}}
                    </li>
                    <li>
                      {{#link-to "find-work" (query-params category="java")}}Java{{/link-to}}
                    </li>
                    <li>
                      <a href="#">Web Design</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          

        </div>

        <!-- Blog Entries Column -->
        <div class="col-md-8 job-posting">

          

          {{#each filteredJobs as |job|}}
          <div class="card mb-4">
            <div class="card-body">
              <h2 class="card-title">{{job.jobName}}</h2>
              <p class="card-text">{{job.jobDesc}}</p>
              <a href="#" class="btn btn-primary">Bid Now &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              {{job.dateCreated}}
              Category: {{job.category}}
            </div>
          </div>
          {{/each}}

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>

        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->


</section>