<section class="index-page">
  <!-- Masthead -->
  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">Get it done with a Freelancer!</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <form>
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                  {{input type='search' class='form-control form-control-lg' value=search placeholder='What type of work are you looking for?' aria-label="Search"}}
              </div>
              <div class="col-12 col-md-3">
                {{#link-to "find-work" (query-params query = search) class="btn btn-block btn-lg btn-primary"}}Search{{/link-to}}
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </header>

  <!-- Icons Grid -->
  <section class="features-icons bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-screen-desktop m-auto text-primary"></i>
            </div>
            <h3>Find Work</h3>
            <p class="lead mb-0">Post a job to tell us about your project. We'll quickly match you with the right freelancers.</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-layers m-auto text-primary"></i>
            </div>
            <h3>Hire Freelancers</h3>
            <p class="lead mb-0">Browse profiles, reviews, and proposals then interview top candidates. Hire a favorite and begin your project.!</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-check m-auto text-primary"></i>
            </div>
            <h3>Get Paid</h3>
            <p class="lead mb-0">Invoicing and payments happen through our website. Only pay for work you authorize.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Showcases -->
  <section class="showcase">
    <div class="container-fluid p-0">
      <div class="row no-gutters">

        <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('images/index/bg-showcase-1.jpg');"></div>
        <div class="col-lg-6 order-lg-1 my-auto showcase-text">
          <h2>Android &amp; iOS Development</h2>
          <p class="lead mb-0">Wish you had a custom business application but did not want to hire someone? Have your great app idea created!</p>
        </div>
      </div>
      <div class="row no-gutters">
        <div class="col-lg-6 text-white showcase-img" style="background-image: url('images/index/bg-showcase-2.jpg');"></div>
        <div class="col-lg-6 my-auto showcase-text">
          <h2>Web Development</h2>
          <p class="lead mb-0">Increase your online presence without breaking the bank with a brand new website.</p>
        </div>
      </div>
      <div class="row no-gutters">
        <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('images/index/bg-showcase-3.jpg');"></div>
        <div class="col-lg-6 order-lg-1 my-auto showcase-text">
          <h2>Prototyping</h2>
          <p class="lead mb-0">Can you code what you need, but don't have the design skills? Hire a designer to prototype your next app or website!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials text-center bg-light">
    <div class="container">
      <h2 class="mb-5">What people are saying...</h2>
      <div class="row">
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <img class="img-fluid rounded-circle mb-3" src="images/index/testimonials-1.jpg" alt="">
            <h5>Marry H.</h5>
            <p class="font-weight-light mb-0">"This is fantastic! I saved so much money and love my website!"</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <img class="img-fluid rounded-circle mb-3" src="images/index/testimonials-2.jpg" alt="">
            <h5>John S.</h5>
            <p class="font-weight-light mb-0">"Not having to hire a developer made my app affordable and easy."</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <img class="img-fluid rounded-circle mb-3" src="images/index/testimonials-3.jpg" alt="">
            <h5>Jane D.</h5>
            <p class="font-weight-light mb-0">"The extra income I make on the side has paid my student loans!"</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="call-to-action text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h2 class="mb-4">Ready to get started? Sign up now!</h2>
        </div>
        <div class="mx-auto">
          <div class="form-row">  
            <div class="center">
              <a href="#" class="btn btn-primary">Sign Up</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</section>