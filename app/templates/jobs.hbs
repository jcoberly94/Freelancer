<section class="jobs">
  <!-- Page Content -->
  <div class="container">

    <div class="row">


      <div class="col-lg-12">

        {{#each jobID as |job|}}
        <div class="card mt-4">

          <div class="card-body">
            <h3 class="card-title">{{job.jobName}}</h3>
            <h4>Estimated Budget: ${{job.jobBudget}}</h4>
            <p class="card-text">{{job.jobDesc}}</p>
            <button class="btn btn-primary">Bid Now</button>
          </div>
        </div>
        {{/each}}
        <!-- /.card -->



        <div class="card mb-4">
          <div class="card-header">
            Freelancers Bidding
          </div>
          <div class="card-body">
            <h2 class="card-title">Name</h2>
            <p class="card-text">Bid Amount: $</p>
          </div>
          <div class="card-footer text-muted">
            Date Posted:
          </div>
        </div>

      </div>
      <!-- /.col-lg-9 -->

    </div>

  </div>
  <!-- /.container -->
</section>